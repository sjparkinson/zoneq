// Grammer that defines how to parse a zone file.

// Magic expressions that Pest uses to trim clutter from the file being parsed.
newline = _{ "\n" | "\r\n" }
whitespace = _{ " " | "\t" | newline }
comment = _{ ";" ~ (!newline ~ any)* }

zone = { origin }

origin = { "$ORIGIN" ~ domain }

domain = { ('a'..'z' | 'A'..'Z' | '0'..'9' | "-" | ".")+ }

